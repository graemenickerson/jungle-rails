
<section class="users-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <p class="<%= 'alert alert-danger' if flash[:error] == 'Invalid Credentials' %>"> 
    <%= flash[:error] %>
  </p>
  <%= form_tag '/login' do %>
    Email: <%= text_field_tag :email %>
    Password: <%= password_field_tag :password %>
    <%= submit_tag "Submit" %>
  <% end %>

</section>